<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".SettingsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvlogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="top|right"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3sp"
            android:layout_marginRight="20sp"
            android:text="LogOut"
            android:textColor="@color/colorF"
            android:autoLink="all"
            android:clickable="true"
            android:background="@color/colorB"
            android:onClick="logOut"
            />
        <TextView
            android:id="@+id/tvname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="top|right"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="3sp"
            android:layout_marginRight="5sp"
            android:text="name /"
            android:layout_toLeftOf="@+id/tvlogout"
            android:textColor="@color/colorF"
            android:autoLink="all"
            android:clickable="true"
            android:background="@color/colorB"
            android:onClick="logOut"
            />
    </RelativeLayout>


        <TextView
            android:id="@+id/textView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sttxt1"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="20sp"
            android:textSize="18sp"
            android:textColor="@color/colorBl"
            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="left">
                <TextView
                    android:id="@+id/textView03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stparam1t"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10sp"
                    android:textSize="18sp"
                    android:textColor="@color/colorBl"
                    />
                <EditText
                    android:id="@+id/etdeposit"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="20sp"
                    android:ems="5"
                    android:gravity="left"
                    />
                <Button
                    android:id="@+id/btdeposit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="20sp"
                    android:background="@color/colorB"
                    android:textColor="@color/colorF"
                    android:text="Set"
                    android:onClick="makedeposit"
                    android:textSize="18sp"
                    android:layout_column="2"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/textView04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stparam2t"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10sp"
                    android:textSize="18sp"
                    android:textColor="@color/colorBl"
                    />
                <EditText
                    android:id="@+id/etwithdraw"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="20sp"
                    android:ems="5"
                    android:gravity="left"
                    />
                <Button
                    android:id="@+id/btwithdraw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:background="@color/colorB"
                    android:textColor="@color/colorF"
                    android:text="Set"
                    android:onClick="makewithdraw"
                    android:textSize="18sp"
                    android:layout_column="2"/>
            </TableRow>
        </TableLayout>
</LinearLayout>
