<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvlogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="top|right"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3sp"
            android:layout_marginRight="20sp"
            android:text="LogOut"
            android:textColor="@color/colorF"
            android:autoLink="all"
            android:clickable="true"
            android:background="@color/colorB"
            android:onClick="logOut"
            />
        <TextView
            android:id="@+id/tvname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="top|right"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="3sp"
            android:layout_marginRight="5sp"
            android:text="name /"
            android:layout_toLeftOf="@+id/tvlogout"
            android:textColor="@color/colorF"
            android:autoLink="all"
            android:clickable="true"
            android:background="@color/colorB"
            android:onClick="logOut"
            />
    </RelativeLayout>


        <TextView
            android:id="@+id/textView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sttxt1"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="20sp"
            android:textSize="18sp"
            android:textColor="@color/colorBl"
            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="left">
                <TextView
                    android:id="@+id/textView03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stbalance"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10sp"
                    android:textSize="18sp"
                    android:textColor="@color/colorBl"
                    />
                <TextView
                    android:id="@+id/textView04"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="20sp"
                    android:text="Balance"
                    android:textSize="18sp"
                    android:textColor="@color/colorGr"
                    />
                <Button
                    android:id="@+id/btreset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="10sp"
                    android:layout_marginLeft="10sp"
                    android:background="@color/colorSell"
                    android:textColor="@color/colorF"
                    android:text="Reset"
                    android:onClick="resetbalance"
                    android:textSize="18sp"
                    android:layout_column="2"/>
            </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/textView05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/stparam1t"
                android:layout_gravity="left"
                android:layout_marginLeft="10sp"
                android:textSize="18sp"
                android:textColor="@color/colorBl"
                />
            <EditText
                android:id="@+id/etdeposit"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="20sp"
                android:ems="5"
                android:gravity="left"
                />
            <Button
                android:id="@+id/btdeposit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10sp"
                android:background="@color/colorB"
                android:textColor="@color/colorF"
                android:layout_marginLeft="10sp"
                android:text="Set"
                android:onClick="makedeposit"
                android:textSize="18sp"
                android:layout_column="2"/>
        </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/textView06"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stparam2t"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10sp"
                    android:textSize="18sp"
                    android:textColor="@color/colorBl"
                    />
                <EditText
                    android:id="@+id/etwithdraw"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="20sp"
                    android:ems="5"
                    android:gravity="left"
                    />
                <Button
                    android:id="@+id/btwithdraw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="10sp"
                    android:background="@color/colorB"
                    android:textColor="@color/colorF"
                    android:layout_marginLeft="10sp"
                    android:text="Set"
                    android:onClick="makewithdraw"
                    android:textSize="18sp"
                    android:layout_column="2"/>/>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/textView07"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stparam3t"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10sp"
                    android:textSize="18sp"
                    android:textColor="@color/colorBl"
                    />
                <EditText
                    android:id="@+id/etrisk"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="20sp"
                    android:ems="5"
                    android:gravity="left"
                    />
                <Button
                    android:id="@+id/btrisk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="10sp"
                    android:background="@color/colorB"
                    android:textColor="@color/colorF"
                    android:layout_marginLeft="10sp"
                    android:text="Set"
                    android:onClick="setrisk"
                    android:textSize="18sp"
                    android:layout_column="2"/>/>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/textView08"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stparam4t"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10sp"
                    android:textSize="18sp"
                    android:textColor="@color/colorBl"
                    />
                <EditText
                    android:id="@+id/etpass"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="20sp"
                    android:ems="5"
                    android:gravity="left"
                    />
                <Button
                    android:id="@+id/btpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="10sp"
                    android:background="@color/colorB"
                    android:textColor="@color/colorF"
                    android:layout_marginLeft="10sp"
                    android:text="Set"
                    android:onClick="setpass"
                    android:textSize="18sp"
                    android:layout_column="2"/>/>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/textView09"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stparam5t"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10sp"
                    android:textSize="18sp"
                    android:textColor="@color/colorBl"
                    />
                <EditText
                    android:id="@+id/etemail"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="20sp"
                    android:ems="5"
                    android:gravity="left"
                    />
                <Button
                    android:id="@+id/btemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="10sp"
                    android:background="@color/colorB"
                    android:textColor="@color/colorF"
                    android:layout_marginLeft="10sp"
                    android:text="Set"
                    android:onClick="setemail"
                    android:textSize="18sp"
                    android:layout_column="2"/>/>
            </TableRow>


            <TableRow>
                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stparam6t"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10sp"
                    android:textSize="18sp"
                    android:textColor="@color/colorBl"
                    />

                <Button
                    android:id="@+id/btdelete"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="20sp"
                    android:background="@color/colorSell"
                    android:textColor="@color/colorF"
                    android:text="Delete"
                    android:onClick="deletehistory"
                    android:textSize="18sp"
                    android:layout_column="1"/>/>

                <Button
                    android:id="@+id/btexport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="10sp"
                    android:background="@color/colorBuy"
                    android:textColor="@color/colorF"
                    android:layout_marginLeft="10sp"
                    android:text="Export"
                    android:onClick="exporthistory"
                    android:textSize="18sp"
                    android:layout_column="2"/>/>
            </TableRow>

        </TableLayout>

    <TextView
        android:id="@+id/tvLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginTop="10sp"
        android:gravity="center_horizontal"
        android:text=""
        android:textColor="@color/colorBl"
        android:textSize="2sp"
        android:background="@color/colorBl"
        />

    <TextView
        android:id="@+id/tvCredits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:gravity="center_horizontal"
        android:text="Powered By:    Dang / Andres"
        android:textColor="@color/colorBl"
        android:textSize="12sp"
        app:fontFamily="casual" />

    </LinearLayout>
</ScrollView>